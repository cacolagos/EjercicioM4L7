pipeline {
    agent any
    
    stages {
   
                  stage('Initialize'){
            steps{
                echo "Esta es el inicio"
            }
        }
               
               
                 stage('Build') {
            steps {
                sh 'mvn -B package'
               
            }
        }
        
        stage('Test') {
            steps {
                // Ejecución de pruebas unitarias
                sh "mvn test"
            }
        }
    }
    
    post {
        
        
        success {
            // Enviar notificación a Slack en caso de éxito
            slackSend(channel: '#fundamentos-de-devops', message: '¡El pipeline de Maven se ejecutó con éxito!')
        }
        
        failure {
            // Enviar notificación a Slack en caso de fallo
            slackSend(channel: '#fundamentos-de-devops', message: '¡El pipeline de Maven falló!')
        }
    }
    }
    }
    }

